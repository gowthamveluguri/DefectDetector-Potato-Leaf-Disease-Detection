<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rcdsp2rsu5hg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F3F5F4"
        android:paddingTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rb57w978nom5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r5oup4h5tk36"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/info_icon"
                    android:scaleType="fitXY"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/r6s9m98hea2"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/setting"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r44cj1w017rb"
                android:textColor="#115213"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="23dp"
                android:layout_height="0dp"
                android:layout_width="343dp"
                android:layout_weight="1"
                android:text="@string/potato_plant_disease_detection"
                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rkp269ymc7"
                android:layout_width="match_parent"
                android:layout_height="442dp"
                android:background="#D9D9D9"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="36dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/roip2upswjg"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginHorizontal="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/rxpe51l69vl"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="7dp">

                    <ImageView
                        android:id="@+id/r5705rafp8vt"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/capture" />

                    <TextView
                        android:id="@+id/rr9u276s5bz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAPTURE"
                        android:textColor="#FFFAFA"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/r1w1afj7u6qs"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="7dp">

                    <ImageView
                        android:id="@+id/rxfb012p7nni"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/confirm" />

                    <TextView
                        android:id="@+id/rhrt7aralwdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIRM"
                        android:textColor="#FFFAFA"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
